<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/popupbkg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:text="Tips and Tricks:"
                android:textAlignment="center"
                android:textColor="@color/r_purple"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:text="1. Place resistor horizontally behind contrasting background\n2. Zoom in on resistor, centering as much as possible\n3. Use bright lighting and minimize shadows around the resistor"
                android:textAlignment="center"
                android:textColor="@color/r_purple"
                android:textSize="20sp" />

            <Button
                android:id="@+id/gotIt"
                android:layout_width="131dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:layout_marginTop="30dp"
                android:text="Got It"
                android:textColor="@color/r_off_white"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>